!!!
%html
	%head
		%title LiquorCabinetApp
		%meta{content: "width=device-width, initial-scale=1", name: "viewport"}
		= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
		= javascript_include_tag 'application', 'data-turbolinks-track' => true
		
		
		
		%link{href: "http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic", rel: "stylesheet", type: "text/css"}/
		%link{href: "http://fonts.googleapis.com/css?family=Raleway:400,300,700", rel: "stylesheet", type: "text/css"}/
		
		
		= csrf_meta_tags
	%body
		#navigation.navbar.navbar-default
			.container
				.navbar-header
					%button.navbar-toggle{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", type: "button"}
						%span.icon-bar
						%span.icon-bar
						%span.icon-bar
					%a.navbar-brand{href: "/"}
						%b LiQo
				.navbar-collapse.collapse
					%ul.nav.navbar-nav
						- if user_signed_in?
							%li
								%a.smothscroll.navbar-link{href: edit_user_registration_path} Edit Profile
							%li
								= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'smoothscroll'
								/ %a.smothscroll{href: destroy_user_session_path, method: :delete} Logout
						- else
							%li
								= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
							%li
								= link_to "Login", new_user_session_path, :class => 'navbar-link'	
					- if user_signed_in?
						%ul.nav.navbar-nav.navbar-right
							%li
								%h4.logged-header
									Logged in as #{current_user.email}



		#headerwrap
			.notice-tags
				- if notice != nil
					%p.notice= notice
				- if alert != nil				
					%p.alert= alert
				/ - if user_signed_in?
				/ 	= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link'
				/ 	= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'
				/ - else
				/ 	= link_to "Sign up", new_user_registration_path, :class => 'navbar-link'
				/ 	= link_to "Login", new_user_session_path, :class => 'navbar-link'
			= yield